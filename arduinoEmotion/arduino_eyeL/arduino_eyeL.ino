int i;
 
void clean(){
  for(int i = 0; i < 3; i++)
    lc.clearDisplay(i);
}


void setup() {
  Serial.begin(115200);

  for(int i=0; i<3; i++){
    lc.shutdown(i,false);
    lc.setIntensity(i,5);
    lc.clearDisplay(i);
  }

}

int idx = 0;
String input = "";

void loop(){
  if (Serial.available()>0) {
    input = Serial.readStringUntil('\n');
  }  

  if (input=="sleep"){
    clean();
  }

  if (input=="normal-4"){
    for (i = 0; i<8; i++)
    {
      lc.setRow(2,i,normalA[0][i]);
      lc.setRow(1,i,normalB[0][i]);
      lc.setRow(0,i,normalC[0][i]);
    }
  }

  else if (input=="happy-3"){
    for (i = 0; i<8; i++)
    {
      lc.setRow(2,i,happyA[idx][i]);
      lc.setRow(1,i,happyB[idx][i]);
      lc.setRow(0,i,happyC[idx][i]);
    }
    idx = (idx+1) % (sizeof(happyA)/8);
  }

  else if (input=="sad-4"){      
    for (i = 0; i<8; i++)
    {
      lc.setRow(2,i,sadA[0][i]);
      lc.setRow(1,i,sadB[idx][i]);
      lc.setRow(0,i,sadC[0][i]);
    }
    idx = (idx+1) % (sizeof(sadB)/8);
  }

  else if (input=="angry-4"){
    for (i = 0; i<8; i++)
    {
      lc.setRow(0,i,angryA[idx][i]);
      lc.setRow(1,i,angryB[idx][i]);
      lc.setRow(2,i,angryC[idx][i]);
    }
    idx = (idx+1) % (sizeof(angryA)/8);
  }

  delay(100);

}
