int row, col, i, j;
 
void clean(){
  for(int i = 0; i < 3; i++)
    lc.clearDisplay(i);
}


void setup() {
  Serial.begin(115200);

  for(int i=0; i<3; i++){
    lc.shutdown(i,false);
    lc.setIntensity(i,5);
    lc.clearDisplay(i);
  }

}

String input = "";
void loop(){
  if (Serial.available()>0) {
    input = Serial.readStringUntil('\n');
  }  

  if (input=="normal-4"){
    for (i = 0; i<6; i++)
    {
      for (j = 0; j<8; j++)
      {
        lc.setRow(2,j,normalA[i][j]);
        lc.setRow(1,j,normalB[i][j]);
        lc.setRow(0,j,normalC[i][j]);
      }
      if (Serial.available()) break;
      delay(300);
    }
  }

  else if (input=="happy-3"){
    for (i = 0; i<2; i++)
      {
        for (j = 0; j<8; j++)
        {
          lc.setRow(2,j,happyA[i][j]);
          lc.setRow(1,j,happyB[i][j]);
          lc.setRow(0,j,happyC[i][j]);
        }
        if (Serial.available()) break;
        delay(200);      
      }
  }

  else if (input=="sad-4"){
    for (i = 0; i<8; i++)
      {
        for (j = 0; j<8; j++)
        {
          lc.setRow(2,j,sadA[0][j]);
          lc.setRow(1,j,sadB[i][j]);
          lc.setRow(0,j,sadC[0][j]);
        }
        if (Serial.available()) break;
        delay(100);
      }
  }

  else if (input=="angry-4"){
    for (i = 0; i<2; i++)
      {
        for (j = 0; j<8; j++)
        {
          lc.setRow(0,j,angryA[i][j]);
          lc.setRow(1,j,angryB[i][j]);
          lc.setRow(2,j,angryC[i][j]);
        }
        if (Serial.available()) break;
        delay(100);
      }

  }

}
